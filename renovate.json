{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>PeerDB-io/.github:renovate-config"
  ],
  "packageRules": [
    {
      "groupName": "{{manager}} dependencies",
      "groupSlug": "{{manager}}",
      "separateMajorMinor": false,
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "timezone": "Etc/UTC",
  "schedule": [
    "after 5pm on monday"
  ],
  "additionalReviewers": [
    "team:eng"
  ]
}
