  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸŒŽ Launch Go Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "env": {
        "TEST_BQ_CREDS": "${workspaceFolder}/e2e/assets/bq_service_account.json"
      },
    },
    {
      "name": "âš¡ Launch Specific Test",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "args": [
        // test run whould be the file name of the test
        // "-test.run=",
        // testify flags can be added here
        "-testify.m=${input:testName}"
      ],
      "env": {
        "TEST_BQ_CREDS": "${workspaceFolder}/e2e/assets/bq_service_account.json"
      },
      "showLog": true,
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "command",
      "command": "memento.promptString",
      "args": {
        "id": "testName",
        "placeHolder": "Go_Test_Name",
        "description": "Name of the go test to run",
      }
    }
  ]
}
